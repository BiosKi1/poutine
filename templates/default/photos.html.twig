{% extends 'base.html.twig' %}

{% block title %}Photos{% endblock %}

{% block body %}
    <br>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4 offset-md-3">
                <h2>Photos</h2>
            </div>
        </div>
        <br>
            <div id="photosCarousel" class="carousel slide" data-ride="carousel">
                <ul class="carousel-indicators">
                    <li data-target="#photosCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#photosCarousel" data-slide-to="1"></li>
                    <li data-target="#photosCarousel" data-slide-to="2"></li>
                    <li data-target="#photosCarousel" data-slide-to="3"></li>
                    <li data-target="#photosCarousel" data-slide-to="4"></li>
                </ul>
                <div class="carousel-inner text-center">
                    <div class="carousel-item active">
                        <img src="{{ asset('img/photos/poutine1.jpg') }}" alt="poutine">
                    </div>
                    <div class="carousel-item">
                        <img src="{{ asset('img/photos/poutine2.jpg') }}" alt="poutine">
                    </div>
                    <div class="carousel-item">
                        <img src="{{ asset('img/photos/poutine3.jpg') }}" alt="poutine">
                    </div>
                    <div class="carousel-item">
                        <img src="{{ asset('img/photos/poutine4.jpg') }}" alt="poutine">
                    </div>
                    <div class="carousel-item">
                        <img src="{{ asset('img/photos/poutine5.jpg') }}" alt="poutine">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#photosCarousel" data-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </a>
                <a class="carousel-control-next" href="#photosCarousel" data-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </a>
            </div>
    </div>
{% endblock %}